GET appstore_game/_search
{
  "size": 0, 
  "aggs": {
    "Average User Rating agg": {
      "terms": {
        "field": "Average User Rating",
        "size": 10
      }
    }
  }
}

DELETE appstore_game

#This function must show the top 100 games Name ordered by Avg_user_rating first then by Name.
GET appstore_game/_search
{
  "_source": ["Name", "Average User Rating"],
  "sort": [
    {
      "Average User Rating": { "order": "desc" },
      "Name.keyword": {}
    }
  ],
  "size": 100
}

#show the Name and Language of games strictly between 5 and 10 euros.
GET appstore_game/_search
{
  "_source": ["Name", "Average User Rating", "Price"],
  "query": 
  {
    "bool": 
    {
      "filter": 
      {
        "range": {
          "Price": {
            "gte": 5,
            "lte": 10
          }
        }
      }
    }
  }

}


#shows the name of developpers starting with 'K' (case sensitive) and involved in casual games.
GET appstore_game/_search
{
  "_source": "Name", 
  "query": 
  {
    "bool": {
      "should": [
        {
          "prefix": {
            "Name.keyword": {
              "value": "K"
            }
          }
        }
      ]
    }
  }
}


GET appstore_game/_search
{
  "size": 1
}

#shows the Name of developpers involved in games released before 01/08/2008 included and update after 01/01/2018 included.
# [2014 2014]
GET appstore_game/_search
{
  "_source": ["Name", "Original Release Date", "Current Version Release Date"],  
  "query": 
  {
    "bool": 
    {
      "must": 
      [
        {
          "range": 
          {
            "Current Version Release Date": 
            {
              "lte": "01/01/2008"
            }
          }
        },
        {
          "range": 
          {
            "Original Release Date": 
            {
              "gte": "01/01/2018"
            }
          }
        }
      ]
    }
  }
}

GET appstore_game/_search
{
  "size": 0, 
  "_source": "Original Release Date", 
  "aggs": {
    "Date Origine": {
      "terms": {
        "field": "Original Release Date",
        "size": 100
      }
    }
  }
}

GET appstore_game/_search
{
  "_source": "Name", 
  "query": 
  {
    "match": 
    {
        "Name": "Papa's Scooperia HD"
    }
  }
}

GET appstore_game/_search
{
  "size": 0, 
  "_source": "Original Release Date", 
  "aggs": {
    "Date Origine": {
      "terms": {
        "field": "Name.keyword",
        "size": 100
      }
    }
  }
}







